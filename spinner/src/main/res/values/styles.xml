<resources>

    <attr name="textAlignment" format="flags">
        <flag name="start" value="0x00800003" />
        <flag name="center" value="0x11" />
    </attr>
    <attr name="menuWidth" format="dimension|enum">
        <enum name="match_parent" value="-1" />
        <enum name="wrap_content" value="-2" />
        <enum name="fit_horizon" value="-3" />
    </attr>
    <attr name="menuHeight" format="dimension|enum">
        <enum name="wrap_content" value="-1" />
    </attr>
    <attr name="menuOffsetX" format="dimension"/>
    <attr name="menuOffsetY" format="dimension"/>
    <attr name="presetIndex" format="integer"/>
    <attr name="showItemDivider" format="boolean"/>
    <attr name="dividerColor" format="color"/>
    <attr name="dividerPadding" format="dimension"/>
    <attr name="dividerHeight" format="dimension"/>
    <attr name="menuRadius" format="dimension"/>
    <attr name="menuElevation" format="dimension"/>
    <attr name="spinnerBackground" format="color|reference"/>
    <attr name="menuBackground" format="color|reference"/>

    <declare-styleable name="SmartSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color" />
        <attr name="arrowPadding" format="dimension" />
        <attr name="textAlignment" />
        <attr name="menuPaddingStart" format="dimension"/>
        <attr name="menuPaddingEnd" format="dimension"/>
        <attr name="menuWidth" />
        <attr name="menuHeight" />
        <attr name="menuOffsetX"/>
        <attr name="menuOffsetY"/>
        <attr name="menuRadius"/>
        <attr name="menuElevation"/>
        <attr name="selectedColor" format="color" />
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="presetText" format="string|reference"/>
        <attr name="entries" format="reference"/>
        <attr name="spinnerBackground" />
        <attr name="menuBackground" />
        <attr name="optionBackground" format="color|reference"/>
        <attr name="selectedBackground" format="color|reference"/>
        <attr name="presetIndex"/>
        <attr name="showSelectedColor" format="boolean"/>
        <attr name="showItemDivider"/>
        <attr name="dividerColor"/>
        <attr name="dividerPadding"/>
        <attr name="dividerHeight"/>
    </declare-styleable>

    <declare-styleable name="SmartSpinnerLayout">
        <attr name="menuWidth" />
        <attr name="menuHeight" />
        <attr name="menuOffsetX"/>
        <attr name="menuOffsetY"/>
        <attr name="menuRadius"/>
        <attr name="menuElevation"/>
        <attr name="spinnerBackground" />
        <attr name="menuBackground" />
        <attr name="presetIndex"/>
        <attr name="showItemDivider"/>
        <attr name="dividerColor"/>
        <attr name="dividerPadding"/>
        <attr name="dividerHeight"/>
    </declare-styleable>

</resources>
